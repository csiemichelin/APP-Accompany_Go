<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFF4E3"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#8C8557"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="#FFFFF4E3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/userPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    app:srcCompat="@drawable/userphoto"
                    android:scaleX="1"
                    android:layout_marginVertical="5dp" />

                <TextView
                    android:id="@+id/input_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:gravity="top|center"
                    android:text="業瑞峰"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="23dp">

                <TextClock
                    android:id="@+id/textClock"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:format24Hour="HH:mm"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"/>

                <TextClock
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:format24Hour="MM月dd日 EEEE"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="50dp">

                <ImageView
                    android:id="@+id/wheather_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/wheather"

                    android:gravity="right"/>

                <TextView
                    android:id="@+id/temp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="15°C"
                    android:textColor="#000000"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:layout_marginRight="10dp"
                    android:layout_marginVertical="10dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:text="Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#000000"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#8C8557"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:background="#FFFFF4E3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/old_fd"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="3"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#F7898D"
                    android:padding="23dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_friend" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="38dp"
                    android:layout_marginRight="15dp"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:text="好友紀錄"
                    android:textColor="#000000"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/bt_issue"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/rounded_button"
                    android:padding="23dp"
                    android:layout_marginRight="38dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="22dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_resource"
                    android:backgroundTint="#FAB255"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="38dp"
                    android:layout_marginLeft="15dp"
                    android:text="醫療資源"
                    android:textColor="#000000"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:scaleX="0.9"
                    android:scaleY="0.9"/>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp">

            <ImageButton
                android:id="@+id/bt_sort"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/choose2_buttom"
                android:padding="15dp"
                android:paddingLeft="30dp"
                android:scaleType="fitStart"
                android:src="@drawable/ic_touch"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="租孫GO"
                android:textColor="#000000"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:padding="30dp"
                android:layout_gravity="center"
                android:gravity="right|center|center"/>

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#8C8557"/>
</LinearLayout>
